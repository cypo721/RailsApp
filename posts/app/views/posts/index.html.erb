<p id="notice"><%= notice %></p>

<div class="container">
  <a href="/">
<h1 class="text-center alert alert-info">Posts</h1>
</a>
<h4 class="text-center">Filter by tag</h4>
<div class="row">
<div class="col-xs-12 text-center">
      <% @tags.each do |tag| %>
      <a class="filter-by-tag" href='/posts/filter/<%=tag.name%>'>&nbsp <%= tag.name %> &nbsp </a>
      <% end %>
    </div>

</div>
<hr class="custom-hr">
  <a class="btn btn-success" href="/posts/new">New Post</a>
<hr class="custom-hr">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Autor</th>
      <th>Title</th>
      <th>Body</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr id='post-row-<%= post.id %>'>
        <td class="post-author"><%= post.autor %></td>
        <td class="post-title"><%= post.title %></td>
        <td class="post-body"><%= post.body %></td>
        <td class="post-tags"><%= post.tags_string %></td>
        <td> <a class="btn btn-warning" href="/posts/<%= post.id %>/edit">Edit</a></td>
        <td> <a class="btn btn-danger" data-method="delete" href="/posts/<%= post.id %>">Delete</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%#= link_to 'New Post', new_post_path %>
</div>
